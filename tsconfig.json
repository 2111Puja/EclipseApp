{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",          // or "react-jsx" if using React 17+
    "allowJs": true,         // Allows JavaScript files in your project
    "target": "ES6",         // ECMAScript target version
    "module": "ESNext",      // Module system (you can also use "commonjs")
    "lib": ["dom", "es6"],   // Libraries to include
    "esModuleInterop": true  // Ensures compatibility with CommonJS modules
  }
}
